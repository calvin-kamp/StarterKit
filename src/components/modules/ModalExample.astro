---
import '@styles/components/modules/_modal-example.scss';

import Modal from '@components/ui/Modal.astro';
import Button from '@components/ui/Button.astro';
---

<div class="modal-example">
    <div class="container">
        <div class="row">

            <div class="modal-example__headline col-12 col-md-10 col-md-left-1">

                <h2>
                    Modal Example
                </h2>
                
            </div>

            <div class="modal-example__modal-triggers col-12 col-md-10 col-md-left-1">

                <Button 
                    outlined
                    openModalId="one"
                >
                    open modal one
                </Button>

                <Modal
                    modalId="one"
                    title="This title describes the first Modal"
                >
        
                    <p slot="modal-description">
                        modal one content
                    </p>
        
                    <div slot="modal-footer">
                        <Button 
                            primary
                            data-close-modal
                        >
                            close modal
                        </Button>
                    </div>
                    
                </Modal>

                <Button 
                    outlined
                    openModalId="two"
                >
                    open modal two
                </Button>

                <Modal modalId="two">

                    <div slot="modal-header">
                        <h2>
                            modal two header
                        </h2>
                    </div>
        
                    <p>
                        modal two content
                    </p>
                    
                </Modal>

            </div>

        </div>
    </div>
</div>
